@model Actor

<div class="container">
    <div class="row mb-3 align-items-center my-3">
        <div class="col-md-6">
            <h2 class="display-6">Edit Actor</h2>
        </div>
    </div>
    <form method="post" enctype="multipart/form-data">
        <!-- Actor Name -->
        <div class="mb-3">
            <label for="Name" class="form-label">Actor Name</label>
            <input type="text" class="form-control" id="Name" name="Name" placeholder="Enter actor name" value="@Model.Name">
        </div>

        <!-- Profile Picture -->
        <div class="mb-3">
            <label for="formFile" class="form-label">Choose file</label>
            <input class="form-control" type="file" id="formFile" name="file"
                   onchange="previewImage(event)" />
        </div>

        <!-- Current / Preview Image -->
        <div class="mb-3">
            <img id="preview"
                 src="~/Admin/Imgs/ActorsImg/@Model.Img?v=@DateTime.Now.Ticks"
                 alt="current image"
                 style="max-width: 200px; border: 1px solid #ccc; padding: 5px; border-radius: 10px;" />
        </div>

        <!-- Bio -->
        <div class="mb-3">
            <label for="Bio" class="form-label">Bio</label>
            <textarea class="form-control" id="Bio" name="Bio" rows="5" placeholder="Enter Bio">@Model.Bio</textarea>
        </div>

        <button type="submit" class="btn btn-primary px-6">
            Save
        </button>
    </form>
</div>

<script>
    function previewImage(event) {
        const input = event.target;
        const preview = document.getElementById('preview'); // صححنا Document → document

        if (input.files && input.files[0]) {
            const reader = new FileReader();
            reader.onload = function(e) {
                preview.src = e.target.result;
            }
            reader.readAsDataURL(input.files[0]);
        }
    }
</script>
