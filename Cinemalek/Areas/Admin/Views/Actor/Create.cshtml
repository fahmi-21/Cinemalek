@model Actor

<div class="container">
    <div class="row mb-3 align-items-center my-3">
        <div class="col-md-6">
            <h2 class="display-6">Add New Actor</h2>
        </div>
    </div>

    @* ✅ عرض رسائل الخطأ العامة *@
    @if (!ViewData.ModelState.IsValid && ViewData.ModelState[""]?.Errors.Count > 0)
    {
        <div class="alert alert-danger">
            @foreach (var error in ViewData.ModelState[""].Errors)
            {
                <div>@error.ErrorMessage</div>
            }
        </div>
    }

    <form asp-action="Create" method="post" enctype="multipart/form-data">
        <!-- Actor Name -->
        <div class="mb-3">
            <label asp-for="Name" class="form-label"></label>
            <input asp-for="Name" class="form-control" placeholder="Enter actor name" />
            <span class="text-danger" asp-validation-for="Name"></span>
        </div>

        <!-- Profile Picture -->
        <div class="mb-3">
            <label class="form-label">Profile Picture <span class="text-danger">*</span></label>
            <input type="file"
                   name="Img"
                   class="form-control"
                   accept="image/*"
                   required />
            @* ✅ عرض رسالة الخطأ من ModelState *@
            @if (ViewData.ModelState["Img"]?.Errors.Count > 0)
            {
                <span class="text-danger">@ViewData.ModelState["Img"].Errors[0].ErrorMessage</span>
            }
        </div>

        <!-- Bio -->
        <div class="mb-3">
            <label asp-for="Bio" class="form-label"></label>
            <textarea asp-for="Bio"
                      class="form-control"
                      rows="5"
                      placeholder="Enter bio"></textarea>
            <span class="text-danger" asp-validation-for="Bio"></span>
        </div>

        <button type="submit" class="btn btn-primary px-4">
            <i class="fas fa-save me-2"></i>Save
        </button>
        <a asp-action="Index" class="btn btn-secondary px-4 ms-2">
            <i class="fas fa-times me-2"></i>Cancel
        </a>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}