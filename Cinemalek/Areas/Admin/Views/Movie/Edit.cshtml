@model MovieEditVM

<div class="container">
    <div class="row mb-3 align-items-center my-3">
        <div class="col-md-6">
            <h2 class="display-6">Edit Movie</h2>
        </div>
    </div>

    <form method="post" enctype="multipart/form-data" asp-action="Edit" asp-route-id="@Model.Movie?.Id">
        <input type="hidden" name="Movie.Id" value="@Model.Movie?.Id" />
        <!-- Movie Name -->
        <div class="mb-3">
            <label class="form-label">Movie Name</label>
            <input type="text" class="form-control" name="Movie.Name" value="@Model.Movie?.Name" placeholder="Enter Movie name" />
        </div>

        <!-- Category -->
        <div class="mb-3">
            <label class="form-label">Category</label>
            <select class="form-select" name="Movie.CategoryId">
                @foreach (var category in Model.Categories ?? new List<Category>())
                {
                    if (category.Id == Model.Movie?.CategoryId)
                    {
                        <option value="@category.Id" selected>@category.Name</option>
                    }
                    else
                    {
                        <option value="@category.Id">@category.Name</option>
                    }
                }
            </select>
        </div>

        <!-- Cinema -->
        <div class="mb-3">
            <label class="form-label">Cinema</label>
            <select class="form-select" name="Movie.CinemaId">
                @foreach (var cinema in Model.Cinemas ?? new List<Cinema>())
                {
                    if (cinema.Id == Model.Movie?.CinemaId)
                    {
                        <option value="@cinema.Id" selected>@cinema.Name</option>
                    }
                    else
                    {
                        <option value="@cinema.Id">@cinema.Name</option>
                    }
                }
            </select>
        </div>

        <!-- Actors (Multiple Select) -->
        <div class="mb-3">
            <label class="form-label">Cast</label>
            <select class="form-select" name="actorsid" multiple>
                @foreach (var actor in Model.Actors ?? new List<Actor>())
                {
                    if (Model.SelectedActorIds?.Contains(actor.Id) == true)
                    {
                        <option value="@actor.Id" selected>@actor.Name</option>
                    }
                    else
                    {
                        <option value="@actor.Id">@actor.Name</option>
                    }
                }
            </select>
        </div>

        <!-- Main Image -->
        <div class="mb-3">
            <label class="form-label">Profile Img</label>
            <input class="form-control" type="file" name="MainImg" onchange="previewImage(event)">
        </div>
        <div class="mb-3">
            <img id="preview"
                 src="~/Admin/Imgs/MoviesImg/@Model.Movie?.Img?v=@DateTime.Now.Ticks"
                 alt="Current Image"
                 style="max-width:200px; border:1px solid #ccc; padding:5px; border-radius:10px;" />
        </div>

        <!-- Sub Images -->
        <div class="mb-3">
            <label class="form-label">Sub Imgs</label>
            <input class="form-control" type="file" name="SubImgs" multiple>
        </div>

        <div class="d-flex gap-2 mb-3">
            @foreach (var img in Model.SubImgs ?? new List<MovieSubImg>())
            {
                <img src="~/Admin/Imgs/MoviesImg/SubImgs/@img.Img"
                     alt="Sub Image"
                     style="max-width:150px; border:1px solid #ccc; border-radius:10px; padding:2px;" />
            }
        </div>

        <!-- Status -->
        <div class="mb-3">
            <label class="form-label">Status</label>
            <select class="form-select" name="Movie.Status">
                @if (Model.Movie?.Status == true)
                {
                    <option value="true" selected>Active</option>
                    <option value="false">Not Active</option>
                }
                else
                {
                    <option value="true">Active</option>
                    <option value="false" selected>Not Active</option>
                }
            </select>
        </div>

        <!-- Price -->
        <div class="mb-3">
            <label class="form-label">Price</label>
            <input type="text" class="form-control" name="Movie.Price" value="@Model.Movie?.Price" />
        </div>

        <!-- Date -->
        <div class="mb-3">
            <label class="form-label">Date</label>
            <input type="datetime-local" class="form-control" name="Movie.Date"
                   value="@Model.Movie?.Date.ToString("yyyy-MM-ddTHH:mm")" />
        </div>

        <!-- Description -->
        <div class="mb-3">
            <label class="form-label">Description</label>
            <textarea class="form-control" name="Movie.Description" rows="5">@Model.Movie?.Description</textarea>
        </div>

        <button type="submit" class="btn btn-primary px-6">Save</button>
    </form>
</div>

@section Scripts
{
    <partial name="_ValidationScriptsPartial" />
}


<script>
    function previewImage(event) {
        const input = event.target;
        const preview = document.getElementById('preview');

        if (input.files && input.files[0]) {
            const reader = new FileReader();
            reader.onload = function(e) {
                preview.src = e.target.result;
            }
            reader.readAsDataURL(input.files[0]);
        }
    }
</script>
