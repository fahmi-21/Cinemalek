
@model Category

<div class="container">
    <div class="row mb-3 align-items-center my-3">
        <div class="col-md-6">
            <h2 class="display-6">Create New Category</h2>
        </div>
    </div>
    <form method="post">
        <!-- Category Name -->
        <div class="mb-3">
            <label  class="form-label" asp-for="Name">Category Name</label>
            <input type="text"
                   class="form-control"
                   id="Name"
                   name="Name"
                   placeholder="Enter category name">

            <span class="text-danger" asp-validation-for="Name"></span>
        </div>

        <!-- Status -->
        <div class="mb-3">
            <label for="IsActive" class="form-label" name="Status">Status</label>
            <select class="form-select" id="IsActive" asp-for="Status">
                    <option value="true">Active</option>
                    <option value="false">Not Active</option>
            </select>
            <span class="text-danger" asp-validation-for="Status"></span>
        </div>

        <!-- pio-->
        <div class="mb-3">
            <label for="Description" class="form-label" name="Description">Description</label>
            <textarea class="form-control"
                      rows="5"
                      placeholder="Enter Description"
                      asp-for="Description"></textarea>
            <span class="text-danger" asp-validation-for="Description"></span>
        </div>

        <button type="submit" class="btn btn-primary px-4">
            <i class="fas fa-save me-2"></i>Save
        </button>
        <a asp-action="Index" class="btn btn-secondary px-4 ms-2">
            <i class="fas fa-times me-2"></i>Cancel
        </a>
    </form>
</div>

